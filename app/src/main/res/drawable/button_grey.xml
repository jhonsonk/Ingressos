<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!--Disabled-->
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_300" />
            <padding
                android:bottom="12dp"
                android:left="12dp"
                android:right="12dp"
                android:top="12dp" />
            <stroke
                android:width="0dip"
                android:color="#FFFFFF" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!--Pressed-->
    <item
        android:state_enabled="true"
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_900" />
            <padding
                android:bottom="12dp"
                android:left="12dp"
                android:right="12dp"
                android:top="12dp" />
            <stroke
                android:width="0dip"
                android:color="#FFFFFF" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!--Focus-->
    <item
        android:state_enabled="true"
        android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_300" />
            <padding
                android:bottom="12dp"
                android:left="12dp"
                android:right="12dp"
                android:top="12dp" />
            <stroke
                android:width="0dip"
                android:color="#FFFFFF" />
            <corners android:radius="10dp" />
        </shape>
    </item>

    <!--Enabled-->
    <item android:state_enabled="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_700_translucent" />
            <padding
                android:bottom="12dp"
                android:left="12dp"
                android:right="12dp"
                android:top="12dp" />
            <stroke
                android:width="0dip"
                android:color="#FFFFFF" />
            <corners android:radius="10dp" />
        </shape>
    </item>
</selector>